<div class="container">
  <div class="row justify-content-center"> 
    <div lass="col-10">
    <%= render 'error' %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", data: {turbo: false}) do |f| %>
        <div class="mb-3 row">
          <%= f.label :name, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded" %> <br/>
          </div>
        </div>
        
        <div class="mb-3 row">
          <%= f.label :age, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :age, class: "form-control shadow rounded" %> <br/>
          </div>
        </div>

        <div class="mb-3 row">
          <%= f.label :position, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :position, class: "form-control shadow rounded"%> <br/>
          </div>
        </div>
        
        <div class="mb-3 row">
          <%= f.label :team_id, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :team_id, class: "form-control shadow rounded" %> <br/>
          </div>
        </div>

        <div class="mb-3 row">
          <%= f.label :role, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :role, class: "form-control shadow rounded"%> <br/>
          </div>
        </div>

        <div class="mb-3 row">
          <%= f.label :is_captain, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.check_box :is_captain, class: "form-control shadow rounded"%> <br/>
          </div>
        </div>
        
        <div class="mb-3 row">
          <%= f.label :is_active, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.radio :is_active, class: "form-control shadow rounded" %> <br/>
          </div>
        </div>  
        
                
        <div class="mb-3 row">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded"%> <br/>
          </div>
        </div>   
    
        <div class=" d-flex justify-content-center">
          <%= f.submit class:"btn btn-outline-light btn-sm" %>
        </div>
      
      <% end %>
    </div>
    <center><%= link_to '[ Cancel and Return to teams listing ]', teams_path, class: "text-info" %> </center>
  </div>
</div>