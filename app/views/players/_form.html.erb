<div class="container">
  <div class="row justify-content-center"> 
    <div class="col-6">
      <%= render 'error' %>
      <%= form_with(model: player, class: "row g-3 shadow p-3 mb-3 bg-info rounded", data: {turbo: false}) do |form| %> 
        <div class="col-md-6">
          <%= form.label :name, style: "display: block", class: "form-label" %>
          <%= form.text_field :name, class: "form-control" %>
        </div>
      
        <div class="col-md-6">
          <%= form.label :age, style: "display: block", class: "form-label" %>
          <%= form.text_field :age, class: "form-control" %>
        </div>
      
        <div class="col-12">
          <%= form.label :position, style: "display: block", class: "form-label" %>
          <%= form.text_field :position, class: "form-control" %>
        </div>
      
        <div class="col-md-6">
          <%= form.label :role, style: "display: block", class: "form-label" %>
          <%= form.text_field :role, class: "form-control" %>
        </div>
      
        <div class="col-md-6">
          <%= form.label :team_id, style: "display: block", class: "form-label" %>
          <%= form.select :team_id, options_for_select(Team.all.map { |team| team.id }), class: "form-control input-lg" %>  
        </div>

        <div class="col-md-3">
          <div class="form-check">
            <%= form.check_box :is_captain, class: "form-check-input" %>
            <%= form.label :is_captain, style: "display: block", class: "form-check-label" %>
          </div>
        </div>
      
        <div class="col-md-9">
          <div class="form-check">
            <%= form.check_box :is_active, class: "form-check-input" %>
            <%= form.label :is_active, style: "display: block", class: "form-check-label" %>
          </div>
        </div>
      
        <div class="col-12">
          <%= form.label :description, style: "display: block", class: "form-label" %>
          <%= form.text_area :description, class: "form-control" %>  
        </div>
        <br>
      
        <div class=" d-flex justify-content-center">
          <%= form.submit class:"btn btn-outline-light btn-md" %>
        </div>
      <% end %>
      <br>
    </div>
    <center><%= link_to "Cancel and Return to players", players_path, class: "text-info" %></center>
  </div>
</div>